<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ttdn.memonote.fragments.SettingsFragment">

    <LinearLayout
        android:id="@+id/settings_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dimen_5dp">

                <android.support.v7.widget.CardView
                    android:id="@+id/card_sort"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="?attr/selectableItemBackground"
                    android:elevation="@dimen/dimen_5dp">

                    <Switch
                        android:id="@+id/SortSwitch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/dimen_10dp"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:text="Sorting oldest first"
                        android:textSize="@dimen/dimen_16sp" />
                </android.support.v7.widget.CardView>

              <!--  <android.support.v7.widget.CardView

                    android:id="@+id/card_theme"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_below="@id/card_sort"
                    android:background="?attr/selectableItemBackground"
                    android:elevation="@dimen/dimen_5dp">

                    <Switch
                        android:id="@+id/ThemeSwitch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/dimen_10dp"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:text="Night mode theme"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/dimen_16sp" />
                </android.support.v7.widget.CardView>-->

            </RelativeLayout>

        </ScrollView>
    </LinearLayout>
</LinearLayout>
